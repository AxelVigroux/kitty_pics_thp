<section class=" bg-transparent text-gray-900">
  <div class="flex flex-col justify-between mx-auto p-8 md:flex-row lg:w-5/6 xl:3/4">
    <div class="flex flex-col md:w-1/2 mx-2">
      <!-- SECTION: Main Image -->
      <%= image_tag(@product.img_url) %>
    </div>
    <div class="flex flex-col h-full justify-evenly px-8 items-center md:w-1/2 md:mx-2">
      <!-- SECTION: Product Title -->
      <h1 class="text-3xl text-center md:text-5xl leading-none font-semibold">
        <%= @product.title %>
      </h1>
      <!-- SECTION: Product Subtitle -->
      <h2 class="text-2xl font-light text-center mb-4">
        <%= @product.categories.first.name %>
      </h2> 
      <!-- SECTION: Product Description -->
      <p class="text-justify">
        <%= @product.description %>
      </p>      
      <div class="flex flex-col md:flex-row justify-between items-center w-full">   
        <div class="flex w-full mt-8 justify-end items-center">        
          <h2 class="text-center text-xl xl:text-2xl font-semibold w-32 border-t border-b border-l border-gray-400 rounded-l-md py-2">
            <%= @product.price %><span class="text-base">â‚¬</span>
          </h2>        
          <%= button_to "Add to cart", product_line_items_path(@product.id), class: "px-6 bg-yellow-500 border-yellow-500 text-white md:px-12 uppercase py-2 rounded-r-md text-xl border-t border-b border-r xl:text-2xl transition-colors duration-200 ease-in-out focus:outline-none hover:bg-yellow-300"
          %>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>