<div class=" bg-yellow text-gray-900 flex items-center justify-center p-8 md:flex-row md:ml-20 lg:w-5/6 xl:3/4 ">
  <div class="flex flex-col md:flex-row w-full">
    <div class="flex flex-col items-center w-full md:w-1/2 ">

      <!-- SECTION: Picture -->
      <img class="object-cover object-center rounded-full h-32 w-32"
        src="https://images.unsplash.com/photo-1499996860823-5214fcc65f8f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1902&q=80"
        alt="" />

      <!-- SECTION: Text Content -->
      <h1 class="text-4xl font-light text-yellow-500 ">
        <%= @user.firstname %>
        <%= @user.lastname %>
      </h1>
      <h2 class="text-xl"> <%= @user.email %></h2>
      <%=link_to 'Edit', edit_user_path(@user), class:"mt-3 bg-yellow-500 text-white active:bg-yellow-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1"%>
    </div>
    <div class="md:ml-20 lg:-md-20">

      <!-- SECTION: Orders side -->
      <div
        class="flex flex-col mt-5 text-center align-middle justify-center px-8 py-6 border text-gray-900 rounded-b-md bg-yellow-100 border-none shadow-lg w-full md:w-full">
        <table>
          <thead>
            <tr>
              <th class="text-left px-8 py-4">N°order</th>
              <th class="text-left px-8 py-4">Amount</th>
              <th class="text-left px-8 py-4">Details</th>
            </tr>
          </thead>
          <tbody>

                <!-- SECTION:orders loop-->
           <% current_user.orders.each_with_index do |order| %>
            <tr>
              <td class="px-8 py-4">Commande du <%= order.created_at.strftime('%d/%m/%Y à %H:%M') %> d'un montant de <%= order.sub_total %>€</td>
            <% end %>
              <td class="px-8 py-4">N°12354</td>
              <td class="px-8 py-4">90 €</td>
              <td class="px-8 py-4"><i class="fas fa-search"></i></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- SECTION: Buttons -->
</div>
<div class="text-right mr-5">

</div>
</div>